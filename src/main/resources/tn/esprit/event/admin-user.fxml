<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="648.0" prefWidth="994.0" spacing="20" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.event.controller.AdminController">
   <VBox prefHeight="608.0" prefWidth="852.0">
      <children>
         <HBox prefHeight="100.0" prefWidth="200.0" spacing="30.0">
            <children>
               <TextField fx:id="tfrecherche">
                  <HBox.margin>
                     <Insets left="180.0" top="20.0" />
                  </HBox.margin>
               </TextField>
               <ComboBox fx:id="cbtri" prefWidth="150.0">
                  <HBox.margin>
                     <Insets top="20.0" />
                  </HBox.margin>
               </ComboBox>
            </children>
            <VBox.margin>
               <Insets />
            </VBox.margin>
         </HBox>
      
          <!-- Left side: TableView of Users -->
          <TableView fx:id="userTable" prefHeight="571.0" prefWidth="843.0">
              <columns>
                  <TableColumn fx:id="nomColumn" prefWidth="100" text="Nom" />
                  <TableColumn fx:id="prenomColumn" prefWidth="123.0" text="Prenom" />
                  <TableColumn fx:id="emailColumn" prefWidth="316.0" text="Email" />
                  <TableColumn fx:id="roleColumn" prefWidth="151.0" text="Role" />
                  <TableColumn fx:id="actionsColumn" prefWidth="130.0" text="Actions" />
              </columns>
          </TableView>
      </children>
   </VBox>
   <VBox prefHeight="200.0" prefWidth="100.0" spacing="30.0">
      <children>
           <Button onAction="#gotoAjouter" prefHeight="30.0" prefWidth="106.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="Ajouter +" />
         <Button onAction="#gotoStat" prefHeight="30.0" prefWidth="106.0" style="-fx-background-color: blue; -fx-text-fill: white; -fx-font-size: 14px;" text="Stat" />
         <Button onAction="#gotoLogin" prefHeight="30.0" prefWidth="106.0" style="-fx-background-color: red; -fx-text-fill: white; -fx-font-size: 14px;" text="Logout" />
      </children>
   </VBox>
</HBox>
