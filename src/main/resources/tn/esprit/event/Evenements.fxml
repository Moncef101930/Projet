<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.event.controller.Evenementcontroller">
    <children>
        <TextField fx:id="nomEvenement" layoutX="185.0" layoutY="82.0" prefHeight="26.0" prefWidth="175.0" promptText="Nom de l'événement" />
        <TextField fx:id="lieuEvenement" layoutX="185.0" layoutY="130.0" prefHeight="26.0" prefWidth="175.0" promptText="Lieu de l'événement" />
        <DatePicker fx:id="dateEvenement" layoutX="184.0" layoutY="187.0" promptText="Sélectionner la date" />
        <TextField fx:id="descriptionEvenement" layoutX="184.0" layoutY="232.0" prefHeight="30.0" prefWidth="175.0" promptText="Description de l'événement" />

        <!-- Bouton Ajouter -->
        <Button fx:id="btnAjouter" layoutX="100.0" layoutY="299.0" onAction="#bone" prefHeight="48.0" prefWidth="46.0" style="-fx-background-radius: 50%; -fx-background-color: #4CAF50; -fx-text-fill: white;" text="+">
            <font><Font size="23.0" /></font>
        </Button>

        <!-- Bouton Supprimer -->
        <Button fx:id="btnSupprimer" layoutX="200.0" layoutY="299.0" onAction="#btwo" prefHeight="48.0" prefWidth="46.0" style="-fx-background-radius: 50%; -fx-background-color: #F44336; -fx-text-fill: white;" text="-">
            <font><Font size="26.0" /></font>
        </Button>

        <!-- Bouton Modifier -->
        <Button fx:id="btnModifier" layoutX="300.0" layoutY="299.0" onAction="#bthree" prefHeight="48.0" prefWidth="46.0" style="-fx-background-radius: 50%; -fx-background-color: #2196F3; -fx-text-fill: white;" text="✎">
            <font><Font size="22.0" /></font>
        </Button>

        <!-- Bouton Navigation -->
        <Button fx:id="btnGoToNext" layoutX="400.0" layoutY="299.0" onAction="#goToNextPage" prefHeight="48.0" prefWidth="46.0" style="-fx-background-radius: 50%; -fx-background-color: #FF9800; -fx-text-fill: white;" text="➡">
            <font><Font size="22.0" /></font>
        </Button>

        <!-- Labels -->
        <Label layoutX="100.0" layoutY="358.0" text="Création" />
        <Label layoutX="200.0" layoutY="358.0" text="Suppression" />
        <Label layoutX="300.0" layoutY="358.0" text="Mise à jour" />
        <Label layoutX="400.0" layoutY="358.0" text="Affichage" />
        <Label layoutX="144.0" prefHeight="73.0" prefWidth="303.0" text="Modification événements">
            <font><Font size="23.0" /></font>
        </Label>
    </children>
</AnchorPane>
