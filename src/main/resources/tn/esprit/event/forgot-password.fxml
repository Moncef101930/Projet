<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="402.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.event.controller.ForgotPassword">
    <!-- Email Input Pane -->
    <VBox fx:id="emailPane" alignment="CENTER" spacing="10" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="40.0">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Forgot Password" />
        <Label style="-fx-font-size: 14px; -fx-text-fill: #555555;" text="Enter your email:" />
        <TextField fx:id="emailField" promptText="Email" style="-fx-pref-width: 250px; -fx-padding: 8px; -fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #cccccc;" />
        <Button onAction="#handleSendCode" style="-fx-background-color: linear-gradient(to right, #4CAF50, #66BB6A); -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-background-radius: 4;" text="Send Code" />
    </VBox>

    <!-- Reset Password Pane: initially hidden -->
    <VBox fx:id="resetPane" alignment="CENTER" managed="false" spacing="10" visible="false" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="40.0">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Reset Password" />
        <Label style="-fx-font-size: 14px; -fx-text-fill: #555555;" text="Enter the 6-digit code sent to your email:" />
        <TextField fx:id="codeField" promptText="6-digit code" style="-fx-pref-width: 250px; -fx-padding: 8px; -fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #cccccc;" />
        <Label style="-fx-font-size: 14px; -fx-text-fill: #555555;" text="New Password:" />
        <PasswordField fx:id="newPasswordField" promptText="New Password" style="-fx-pref-width: 250px; -fx-padding: 8px; -fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #cccccc;" />
        <Label style="-fx-font-size: 14px; -fx-text-fill: #555555;" text="Confirm Password:" />
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" style="-fx-pref-width: 250px; -fx-padding: 8px; -fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #cccccc;" />
        <Button onAction="#handleResetPassword" style="-fx-background-color: linear-gradient(to right, #4CAF50, #66BB6A); -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-background-radius: 4;" text="Reset Password" />
    </VBox>

    <!-- Message Label -->
    <Label fx:id="messageLabel" layoutX="25.0" layoutY="350.0" style="-fx-text-fill: red;" />
</AnchorPane>
