<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="611.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.event.controller.Login">
    <children>
        <VBox alignment="CENTER" layoutX="150" layoutY="50" spacing="10.0">
            <children>
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Login" />
                <TextField fx:id="emailField" prefWidth="300" promptText="Email" style="-fx-background-color: #f0f0f0; -fx-border-color: #ccc; -fx-padding: 10;" />
                <PasswordField fx:id="passwordField" prefWidth="300" promptText="Password" style="-fx-background-color: #f0f0f0; -fx-border-color: #ccc; -fx-padding: 10;" />
                <Button onAction="#handleLogin" prefWidth="300" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="Login" />
                <Hyperlink onAction="#goToSignup" style="-fx-text-fill: #3f51b5;" text="Don't have an account? Signup" />
                <Label fx:id="errorLabel" textFill="red" />
            <Hyperlink onAction="#goToForgot" style="-fx-text-fill: #3f51b5;" text="Forgot password?" />
            </children>
        </VBox>
    </children>
</AnchorPane>
