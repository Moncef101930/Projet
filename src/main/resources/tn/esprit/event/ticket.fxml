<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@login_styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.event.controller.TicketController">
    <children>
        <VBox alignment="CENTER" layoutX="50" layoutY="20" prefHeight="400.0" prefWidth="500.0" spacing="15">
            <children>
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Ticket" />
                <TextField fx:id="tfUserName" prefHeight="34.0" prefWidth="350.0" promptText="Nom User" />
                <TextField fx:id="tfEventName" prefHeight="38.0" prefWidth="350.0" promptText="Nom Event" />
                <DatePicker fx:id="dpDateAchat" prefHeight="31.0" prefWidth="303.0" promptText="Date Achat" />
                <ComboBox fx:id="cbTicketType" prefHeight="43.0" prefWidth="306.0" />
                <Button fx:id="btnAcheter" mnemonicParsing="false" onAction="#handleAcheterTicket" prefHeight="26.0" prefWidth="286.0" style="-fx-background-color: #F7F6CF; -fx-text-fill: black; -fx-font-size: 14px;" text="Acheter" textFill="#232121" />
            <Button mnemonicParsing="false" onAction="#LogoutFromTicket" prefHeight="26.0" prefWidth="286.0" style="-fx-background-color: #F7F6CF; -fx-text-fill: black; -fx-font-size: 14px;" text="Logout" textFill="#232121" />
            </children>
        </VBox>
    </children>
</AnchorPane>
