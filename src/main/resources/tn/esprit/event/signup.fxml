<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.event.controller.Signup"
            prefHeight="500.0" prefWidth="600.0">
    <children>
        <VBox spacing="10.0" alignment="CENTER" layoutX="150" layoutY="30">
            <children>
                <Label text="Sign Up" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <TextField fx:id="nomField" promptText="First Name" prefWidth="300"
                           style="-fx-background-color: #f0f0f0; -fx-border-color: #ccc; -fx-padding: 10;"/>
                <TextField fx:id="prenomField" promptText="Last Name" prefWidth="300"
                           style="-fx-background-color: #f0f0f0; -fx-border-color: #ccc; -fx-padding: 10;"/>
                <TextField fx:id="emailField" promptText="Email" prefWidth="300"
                           style="-fx-background-color: #f0f0f0; -fx-border-color: #ccc; -fx-padding: 10;"/>
                <PasswordField fx:id="passwordField" promptText="Password" prefWidth="300"
                               style="-fx-background-color: #f0f0f0; -fx-border-color: #ccc; -fx-padding: 10;"/>
                <!-- New ComboBox for Role selection -->
                <ComboBox fx:id="roleComboBox" promptText="Select Role" prefWidth="300"
                          style="-fx-background-color: #f0f0f0; -fx-border-color: #ccc; -fx-padding: 10;"/>
                <DatePicker fx:id="dateNaissancePicker" promptText="Birth Date" prefWidth="300"
                            style="-fx-background-color: #f0f0f0; -fx-border-color: #ccc; -fx-padding: 10;"/>
                <TextField fx:id="bioField" promptText="Bio" prefWidth="300"
                           style="-fx-background-color: #f0f0f0; -fx-border-color: #ccc; -fx-padding: 10;"/>

                <TextField fx:id="imageField" promptText="Image URL" prefWidth="300"
                           style="-fx-background-color: #f0f0f0; -fx-border-color: #ccc; -fx-padding: 10;"/>
                <Button text="Sign Up" onAction="#handleSignup" prefWidth="300"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px;"/>
                <Hyperlink text="Already have an account? Login" onAction="#goToLogin"
                           style="-fx-text-fill: #3f51b5;"/>
                <Label fx:id="errorLabel" textFill="red"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
