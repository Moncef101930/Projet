<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.event.controller.ProfileController"
            prefHeight="600" prefWidth="600" style="-fx-padding: 20;">
    <children>
        <VBox alignment="CENTER" spacing="10" layoutX="50" layoutY="20" prefWidth="500">
            <children>
                <Label text="User Profile" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <!-- Profile picture -->
                <ImageView fx:id="profileImageView" fitWidth="100" fitHeight="100" preserveRatio="true" />
                <TextField fx:id="nomField" promptText="Nom" prefWidth="300" style="-fx-padding: 10;"/>
                <TextField fx:id="prenomField" promptText="Prenom" prefWidth="300" style="-fx-padding: 10;"/>
                <TextField fx:id="emailField" promptText="Email" prefWidth="300" style="-fx-padding: 10;" disable="true"/>
                <PasswordField fx:id="passwordField" promptText="Password" prefWidth="300" style="-fx-padding: 10;"/>
                <DatePicker fx:id="dateNaissancePicker" promptText="Date de Naissance" prefWidth="300" style="-fx-padding: 10;"/>
                <TextField fx:id="bioField" promptText="Bio" prefWidth="300" style="-fx-padding: 10;"/>
                <TextField fx:id="imageField" promptText="Image URL" prefWidth="300" style="-fx-padding: 10;"/>
                <Button text="Save Changes" onAction="#handleSaveProfile" prefWidth="300"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;"/>
                <Label fx:id="messageLabel" textFill="red"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
