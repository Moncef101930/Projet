<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.miseajour">

    <!-- Label et TextField pour le nom -->
    <Label layoutX="48.0" layoutY="102.0" text="Nom :" />
    <TextField fx:id="nomField" layoutX="147.0" layoutY="98.0" prefWidth="300" />

    <!-- Label et TextField pour la description -->
    <Label layoutX="46.0" layoutY="151.0" text="Description :" />
    <TextField fx:id="descriptionField" layoutX="147.0" layoutY="147.0" prefWidth="300" />

    <!-- Label et DatePicker pour la date -->
    <Label layoutX="49.0" layoutY="198.0" text="Date :" />
    <DatePicker fx:id="datePicker" layoutX="147.0" layoutY="194.0" prefWidth="300" />

    <!-- Label et TextField pour le lieu -->
    <Label layoutX="51.0" layoutY="252.0" text="Lieu :" />
    <TextField fx:id="lieuField" layoutX="147.0" layoutY="248.0" prefWidth="300" />

    <!-- Bouton Valider (Circulaire) -->
    <Button fx:id="validerButton" layoutX="263.0" layoutY="304.0" prefHeight="60.0" prefWidth="66.0" style="-fx-background-color: orange; -fx-background-radius: 30; -fx-text-fill: white;">
        <font>
            <Font size="23.0" />
        </font>
        <text>✓</text> <!-- Icône de validation -->
    </Button>
   <HBox layoutX="-21.0" layoutY="-3.0" prefHeight="68.0" prefWidth="671.0">
      <children>
         <AnchorPane prefHeight="70.0" prefWidth="674.0" styleClass="sidepanneaux" stylesheets="@style.css">
            <children>
            
                <!-- Titre -->
                <Label layoutX="221.0" layoutY="13.0" prefHeight="42.0" prefWidth="230.0" text="Modification-Event">
                    <font>
                        <Font size="25.0" />
                    </font>
                </Label>
            </children>
         </AnchorPane>
      </children>
   </HBox>

</AnchorPane>
