<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.user">

    <!-- Tableau des événements -->
    <TableView fx:id="eventTable" layoutX="14.0" layoutY="91.0" prefHeight="203.0" prefWidth="486.0">
        <columns>
            <TableColumn fx:id="nomColumn" prefWidth="120.0" text="Nom" />
            <TableColumn fx:id="descriptionColumn" prefWidth="180.0" text="Description" />
            <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Date" />
            <TableColumn fx:id="lieuColumn" prefWidth="100.0" text="Lieu" />
            <TableColumn fx:id="categorieColumn" prefWidth="120.0" text="Categorie" />
        </columns>
    </TableView>

    <!-- Champ de recherche et bouton -->
    <HBox layoutX="50.0" layoutY="320.0" spacing="10" />
      <Button fx:id="searchButton" layoutX="500.0" layoutY="329.0" prefHeight="45.0" prefWidth="61.0" style="-fx-background-radius: 50%; -fx-padding: 5px;" text="🔍">
      <font>
         <Font size="19.0" />
      </font>
   </Button>
      <TextField fx:id="event" layoutX="79.0" layoutY="338.0" prefHeight="28.0" prefWidth="383.0" promptText="✅ L'événement le plus célèbre" />
   <HBox layoutX="1.0" layoutY="-1.0" prefHeight="72.0" prefWidth="600.0">
      <children>
         <AnchorPane prefHeight="72.0" prefWidth="602.0" styleClass="sidepanneaux" stylesheets="@style.css">
            <children>
               <Label layoutX="100.0" layoutY="16.0" prefHeight="34.0" prefWidth="383.0" text="Liste des Événements 🎉, 📅">
                  <font>
                     <Font size="30.0" />
                  </font>
               </Label>
            </children>
         </AnchorPane>
      </children>
   </HBox>

</AnchorPane>
